## Upstairs Panel
#######################
panel_upstairs:
  entities:
    - group.panel_master_bedroom
    - group.panel_lucas_bedroom
    - group.panel_boys_bathroom
  name: Upstairs
  icon: mdi:bed-empty
  control: hidden
  view: no

## Upstairs Subpanels
#######################
panel_boys_bathroom:
  entities:
    - switch.boys_bathroom_nightlight #light.3a542c
    #- binary_sensor.boys_bathroom_window
  name: Boy's Bathroom
  icon: mdi:emoticon-poop
  control: hidden
  view: no

panel_lucas_bedroom:
  entities:
    - sensor.lucas_bedroom_temperature
    - binary_sensor.lucas_bedroom_occupancy
  name: Lucas' Bedroom
  icon: mdi:bed-empty
  control: hidden
  view: no

panel_master_bedroom:
  entities:
    - sensor.bedroom_temperature
    - binary_sensor.bedroom_occupancy
    - light.nerenes_light
    - light.brians_light #light.3a76dc
    - switch.master_bedroom_fan
  name: Master Bedroom
  icon: mdi:bed-empty
  control: hidden
  view: no