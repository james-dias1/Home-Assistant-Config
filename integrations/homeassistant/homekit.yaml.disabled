homekit:
  auto_start: false
  zeroconf_default_interface: true

  filter:
    exclude_domains:
      - automation
      - binary_sensor
      - camera
      - climate
      #- cover
      - device_tracker
      - feedreeder
      - geo_location
      - groups
      - input_boolean
      - input_datetime
      - input_number
      - input_select
      - input_text
      - light
      #- lock
      - media_player
      - notify
      - person
      - plant
      - proximity
      - remote
      - scene
      - script
      - sensor
      - sun
      - switch
      - timer
      - variable
      - weather
      - zones
      - zwave

    include_entities:
      # BINARY SENSORS
      - binary_sensor.upstairs_bathroom_leak
      - binary_sensor.upstairs_bathroom_window

      # CAMERAS
      - camera.driveway
      - camera.front_door

      # CLIMATE (THERMOSTATS)
      - climate.home
      #- climate.goez

      # GROUPS
      # - group.bedroom_lights
      # - group.family_room_lights
      # - group.kitchen_lights
      # - group.play_room_lights

      # INPUT_BOOLEANS
      - input_boolean.audio_notifications
      #- input_boolean.away_mode
      #- input_boolean.bedroom_light_sync
      - input_boolean.guest_mode
      - input_boolean.leave_unlocked
      - input_boolean.mobile_notifications
#       - input_boolean.wakeup_boys_skipnext
#       - input_boolean.wakeup_brian_fri
#       - input_boolean.wakeup_brian_mon
#       - input_boolean.wakeup_brian_sat
#       - input_boolean.wakeup_brian_skipnext
#       - input_boolean.wakeup_brian_status
#       - input_boolean.wakeup_brian_sun
#       - input_boolean.wakeup_brian_thu
#       - input_boolean.wakeup_brian_tue
#       - input_boolean.wakeup_brian_wed
#       - input_boolean.wakeup_nerene_fri
#       - input_boolean.wakeup_nerene_mon
#       - input_boolean.wakeup_nerene_sat
#       - input_boolean.wakeup_nerene_skipnext
#       - input_boolean.wakeup_nerene_status
#       - input_boolean.wakeup_nerene_sun
#       - input_boolean.wakeup_nerene_thu
#       - input_boolean.wakeup_nerene_tue
#       - input_boolean.wakeup_nerene_wed

      # LIGHTS
      - light.bedroom
      #- light.boys_wakeup
      - light.brian
      - light.dining_room
      - light.entry
      - light.family_room
      - light.family_room_floor_lamp
      #- light.family_room_table_lamp
      #- light.garage_entry
      #- light.glowforge
      #- light.kitchen_cabinet
      #- light.network_closet
      - light.play_room
      - light.play_room_floor_lamp
      - light.porch
      #- light.table_lamp
      #- light.upstairs_bathroom_nightlight

      # MEDIA DEVICES
      - media_player.family_room

      # PEOPLE
      - person.brian
      - person.eric
      - person.heather
      #- person.kyle
      - person.lucas
      - person.nerene
      - person.sandy

      # SENSORS
      - sensor.upstairs_bathroom_humidity
      - sensor.upstairs_bathroom_temperature

      # SWITCHES
      - switch.bedroom_fan
      - switch.family_room_fan
      - switch.hot_water_pump
      - switch.irrigation_zone1
      - switch.irrigation_zone2
      - switch.kitchen
      - switch.kitchen_prep
      #- switch.landscape_lights
      - switch.play_room_fan
      - switch.printers
      - switch.sound_machine
      - switch.upstairs_bathroom_fan


  entity_config:
    sensor.upstairs_bathroom_temperature:
      linked_battery_sensor: sensor.upstairs_bathroom_battery
      low_battery_threshold: 31
    sensor.upstairs_bathroom_window:
      linked_battery_sensor: sensor.upstairs_bathroom_window_battery_level
      low_battery_threshold: 31

    switch.irrigation_zone1:
      type: sprinkler
    switch.irrigation_zone2:
      type: sprinkler