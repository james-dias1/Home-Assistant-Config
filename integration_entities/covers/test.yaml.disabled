---
platform: template
covers:
  test:
    device_class: garage
    friendly_name: Test Cover
    value_template: |
      {%- if is_state("input_boolean.test","on") %}
        {%- if is_state("cover.test","opening") %}
          open
        {%- else %}
          opening
        {%- endif %}
      {%- else %}
        closed
      {%- endif %}
    open_cover:
      - delay:
          seconds: 2
      - service: input_boolean.turn_on
        target:
          entity_id: input_boolean.test
    close_cover:
      - delay:
          seconds: 2
      - service: input_boolean.turn_off
        target:
          entity_id: input_boolean.test
