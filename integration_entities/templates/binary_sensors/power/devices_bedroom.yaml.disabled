---
platform: template
sensors:
  devices_bedroom:
    device_class: power
    friendly_name: Bedroom Devices
    value_template: '{{
        is_state("light.bedroom", "on")
        or is_state("light.bedroom_east", "on")
        or is_state("light.bedroom_table_lamp", "on")
        or is_state("switch.bedroom_fan", "on")
        or is_state("switch.sound_machine", "on")
      }}'
