automation:
  - id: Wakeup Nerene
    alias: Bedroom Light Fade In
    trigger:
      - platform: time
        at: "3:50:00"
    action:
      - service: python_script.lightfade
        data:
          # Go from 10%-100% up 2% every 13 seconds 
          # to go to full brightness in about 10 minutes.
          entity_id: light.living_room_light
          delay_in_sec: 13
          start_level_pct: 10
          end_level_pct: 100
          step_in_level_pct: 2